{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"moduleResolution": "node",
		"outDir": "./dist-es2015",
		"rootDir": "./src",
		"declaration": true,
		"declarationDir": "./dist-typings",
		"sourceMap": true,
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@core/node-platform": ["../@core/node-platform"],
			"@core/resources": ["../@core/resources"],
			"@core/globalization": ["../@core/globalization"]
		}
	},
	"exclude": [
		"dist-*",
		"node_modules"
	]
}
